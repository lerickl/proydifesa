@using Proyecto.Models;
@{ 
    var cliente = (Cliente)Model;
    Layout = "~/Views/Shared/_VendedorLayout.cshtml";

}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<section class="full-width pageContent">
    <section class="full-width text-center" style="padding: 40px 0;">

        <div id="Div-Form-Cliente">

            <h3><b>Registrar Cliente</b></h3>
            <h3></h3>

            <form id="Form-Registro-Cliente" action="/Cliente/Registrar" method="post">

                <div class="form-group">
                    <label for="">Nombre del cliente</label>
                    <input type="text" style="margin-left:1% class="form-control" ; id="" placeholder="Ingrese nombre" value="@cliente.Nombre" name="Nombre">
                    <label class="alert-danger">@Html.ValidationMessage("Nombre")</label>
                </div>

                <div class="form-group">
                    <label for="">Dirección del cliente</label>
                    <input type="text" style="margin-left:1%; class="form-control" id="" placeholder="Ingrese dirección" value="@cliente.Direccion" name="Direccion">
                    <label class="alert-danger">@Html.ValidationMessage("Direccion")</label>
                </div>

                <div class="form-group">
                    <label for="">DNI del cliente</label>
                    <input type="text" style="margin-left:1%; class="form-control" id="" placeholder="Ingrese DNI" value="@cliente.Dni" name="Dni">
                    <label class="alert-danger">@Html.ValidationMessage("Dni")</label>
                </div>

                <button @*id="Btn-RegistrarCliente"*@ type="submit" class="btn btn-default">Registrar</button>
            </form>

        </div>
</section>
</section>